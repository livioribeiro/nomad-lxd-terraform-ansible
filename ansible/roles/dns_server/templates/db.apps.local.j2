;
; BIND data file for apps cluster
;
$TTL	604800
@	IN	SOA	{{ apps_domain }}. root.{{ apps_domain }}. (
				  2		; Serial
				12h		; Refresh
				15m		; Retry
				 4w		; Expire
				 2h )	; Negative Cache TTL
;
@	IN	NS	ns1.cluster.local.
@	IN	NS	ns2.cluster.local.
ns1.cluster.local.	IN	A	{{ hostvars["dns-server1"].ansible_host }}
ns2.cluster.local.	IN	A	{{ hostvars["dns-server1"].ansible_host }}
{% for host in groups["nomad_infra_clients"] -%}
*	IN	A	{{ hostvars[host].ansible_host }}
{% endfor -%}