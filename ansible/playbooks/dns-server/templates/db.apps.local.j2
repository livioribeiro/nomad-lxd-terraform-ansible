;
; BIND data file for apps cluster
;
$TTL	604800
@	IN	SOA	{{ apps_subdomain }}.{{ external_domain }}. root.{{ apps_subdomain }}.{{ external_domain }}. (
				  3		; Serial
				12h		; Refresh
				15m		; Retry
				 4w		; Expire
				 2h )	; Negative Cache TTL
;
	IN	NS	dns-server1.{{ local_cluster_domain }}.
	IN	NS	dns-server2.{{ local_cluster_domain }}.
dns-server1.{{ local_cluster_domain }}.	IN	A	{{ hostvars["dns-server1"].ansible_host }}
dns-server2.{{ local_cluster_domain }}.	IN	A	{{ hostvars["dns-server2"].ansible_host }}
{% for host in groups["nomad_infra_clients"] -%}
*	IN	A	{{ hostvars[host].ansible_host }}
{% endfor -%}
